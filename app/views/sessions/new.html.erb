<h4>Sign in</h4>

<% flash.each do |key, value| %>
  <div class = "flash <%= key %>"><%= value %></div>
<% end %>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :handle %>
    <%= f.text_field :handle %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit "Sign In", :class => "nice small radius black button" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
