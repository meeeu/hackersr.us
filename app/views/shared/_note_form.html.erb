<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
        
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% @note.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :size => "60" %>
  </div>
  <div class="field">
    <%= f.label "url (optional)" %>
    <%= f.text_field :link, :size => "60" %>
  </div>
  <div class="field">
    <%= f.label "say somthing!" %>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.hidden_field :node_id, :value => @node.id %>  
    <%= f.submit "Leave Note", :class => "nice small radius black button" %>
  </div>
<% end %>
