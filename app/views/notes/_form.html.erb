<%= form_for(@note) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, :size => "60" %>
  </div>
  <div class="field">
    <%= f.label "url (optional)" %>
    <%= f.text_field :link, :size => "60" %>
  </div>
  <div class="field">
    <%= f.label "say somthing!" %>
    <%= f.text_area :description %>
  </div>
  <div class="actions">  
    <%= f.submit "Update Note", :class => "nice small radius black button" %>
  </div>
<% end %>
